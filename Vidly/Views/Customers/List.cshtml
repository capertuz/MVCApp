@using Vidly.Models
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Count == 0)
{
    <div> Sorry, there are no customers</div>
}
else
{
    <table class=“table table-‐bordered table‐hover”>
        <thead>
            <tr>
                <th>Customer Name</th>
                @*<th>Discount Rate</th>*@
                <th>Membership Type</th>
            </tr>
        </thead>
        <tbody>
        @foreach (Customer customer in Model)
        {

            <tr><td>@Html.ActionLink((string) customer.Name, "Edit", "Customers", new {id = customer.Id}, null)</td></tr>
            @*<tr><td>@customer.MembershipType.DiscountRate%</td></tr>*@
        <tr><td>@customer.MembershipType.Name</td></tr>
        }

        </tbody>
    </table>
}
