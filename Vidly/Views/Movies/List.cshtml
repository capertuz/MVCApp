@using Vidly.Models
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<div>@Html.ActionLink("New Movie", "New", "Movies", new{@class="btn btn-primary"})</div>

@if (Model.Count == 0)
{
    <div> Sorry, there are no movies</div>
}
else
{
    <table class=“table table-‐bordered table‐hover”>
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>

            @foreach (Movie movie in Model)
            {

                <tr><td>@Html.ActionLink((string)movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td></tr>
                
                 <tr><td>@movie.Genre.Name</td></tr>

            }



</table>



            }
